<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@drawable/loby_background"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <!--아이디
        패스워드
        닉네임
        이름
        이메일
     -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="아이디"
                android:textColor="#141313"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/inputId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:ems="15"
                android:hint="아이디를 입력하세요."
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/idOverlapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="중복 확인" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="비밀번호"
                android:textColor="#141313"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/inputPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:ems="15"
                android:hint="비밀번호를 입력하세요."
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/inputCheckPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:ems="15"
                android:hint="비밀번호를 다시한번 입력해주세요."
                android:inputType="textPassword" />

            <Button
                android:id="@+id/passwordOverlapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="중복 확인" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="닉네임"
                android:textColor="#141313"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/inputNicname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:ems="15"
                android:hint="닉네임을 입력하세요."
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/nicnameOverlapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="중복 확인" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="이름"
                android:textColor="#141313"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/inputName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:ems="15"
                android:hint="이름을 입력하세요."
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="이메일"
                android:textColor="#141313"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:ems="15"
                android:hint="이메일을 입력하세요."
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/emailOverlapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="중복 확인"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/okButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="확인" />

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="취소" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>